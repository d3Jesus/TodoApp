<div class="todo-list">
    @if (tasks is null)
    {
        <h4> No tasks found !</h4>
    }
    else
    {
        foreach(var task in tasks)
        {
            <div class="todo-item">
                <div class="checker"><span class=""><input type="checkbox" title="Mark task as completed!"></span></div>
                <span>@task.Title</span>
                <div class="row float-end ">
                    <div class="col-6">
                        <span title="Update Task" class="text-info fa fa-pencil"></span>
                    </div>
                    <div class="col-6">
                        <span title="Delete Task" class="text-danger fa fa-trash-o"></span>
                    </div>
                </div>
            </div>
        }
    }
</div>